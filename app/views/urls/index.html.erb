<div class="max-w-md mx-auto bg-white p-6 rounded shadow">
  <h2 class="text-xl font-semibold mb-4">Shorten a URL</h2>

  <%= form_with(model: @url, local: true) do |form| %>
    <div class="mb-4">
      <%= form.label :original_url, class: "block text-gray-700" %>
      <%= form.text_field :original_url, class: "w-full px-3 py-2 border rounded", placeholder: "https://example.com" %>
      <% if @url.errors.any? %>
        <div class="text-red-500 text-sm mt-2">
          <%= @url.errors.full_messages.join(", ") %>
        </div>
      <% end %>
    </div>
    <div>
      <%= form.submit "Shorten", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
    </div>
  <% end %>
</div>

<div class="mt-8">
  <h2 class="text-xl font-semibold mb-4">Recent Shortened URLs</h2>
  <table class="min-w-full bg-white rounded shadow">
    <thead>
      <tr>
        <th class="py-2 px-4 border-b">Short URL</th>
        <th class="py-2 px-4 border-b">Original URL</th>
        <th class="py-2 px-4 border-b">Title</th>
      </tr>
    </thead>
    <tbody>
      <% @urls.each do |url| %>
        <tr>
          <td class="py-2 px-4 border-b">
            <%= link_to "#{request.base_url}/#{url.short_code}", short_path(url.short_code), target: "_blank", class: "text-blue-500" %>
          </td>
          <td class="py-2 px-4 border-b">
            <%= link_to url.original_url, url.original_url, target: "_blank", class: "text-blue-500 break-all" %>
          </td>
          <td class="py-2 px-4 border-b"><%= url.title %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
