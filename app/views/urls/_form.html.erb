<!-- app/views/urls/_form.html.erb -->
<%= form_with(model: url, url: urls_path, class: "space-y-6", id: "shorten-form", data: { turbo: true }) do |form| %>
  <div>
    <%= form.label :original_url, "Enter URL:", class: "block text-lg font-medium text-yellow-400" %>
    <%= form.text_field :original_url, 
        class: "mt-1 block w-full px-4 py-3 bg-gray-700 border border-yellow-500 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-yellow-400 focus:border-yellow-400 transition-colors duration-300", 
        placeholder: "https://example.com", 
        pattern: "https?://.*", 
        required: true %>
    <% if url.errors.any? %>
      <p class="mt-2 text-sm text-red-400">
        <%= url.errors.full_messages.join(", ") %>
      </p>
    <% end %>
  </div>

  <div id="submit-button">
    <%= form.submit "Shorten", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-lg text-lg font-medium text-gray-900 bg-yellow-400 hover:bg-orange-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-400 transition-colors duration-300" %>
  </div>
<% end %>

