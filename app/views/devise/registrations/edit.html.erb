<%= turbo_frame_tag "modal" do %>
  <h2 class="text-3xl font-extrabold text-yellow-400 text-center mb-6 tracking-wide">
    Change Your Password
  </h2>

  <%= form_with(
    model: resource,
    as: resource_name,
    url: registration_path(resource_name),
    html: { method: :put, data: { turbo_frame: "modal", turbo_action: "advance" } },
    class: "space-y-6"
  ) do |f| %>

    <!-- Current Password Field -->
    <div class="p-4 mb-4 border border-yellow-500 rounded-lg">
      <%= f.label :current_password, "Current Password:", class: "block text-lg font-medium text-yellow-400" %>
      <%= f.password_field :current_password, autocomplete: "current-password", required: true,
                          class: "mt-1 block w-full px-4 py-3 bg-gray-700 border-none rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-yellow-400 focus:border-yellow-400 transition-colors duration-300" %>
    </div>

    <!-- Password Field -->
    <div class="p-4 mb-4 border border-yellow-500 rounded-lg">
      <%= f.label :password, "New Password:", class: "block text-lg font-medium text-yellow-400" %>
      <%= f.password_field :password, autocomplete: "new-password",
                          class: "mt-1 block w-full px-4 py-3 bg-gray-700 border-none rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-yellow-400 focus:border-yellow-400 transition-colors duration-300",
                          placeholder: "Cannot be same as old password", minlength: 6 %>
    </div>

    <!-- Password Confirmation Field -->
    <div class="p-4 mb-6 border border-yellow-500 rounded-lg">
      <%= f.label :password_confirmation, "Confirm New Password:", class: "block text-lg font-medium text-yellow-400" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
                          class: "mt-1 block w-full px-4 py-3 bg-gray-700 border-none rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-yellow-400 focus:border-yellow-400 transition-colors duration-300" %>
    </div>

    <!-- Submit Button -->
    <div id="submit-button">
      <%= f.submit "Change Password", class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-md shadow-lg text-lg font-medium text-gray-900 bg-yellow-400 hover:bg-orange-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-yellow-400 transition-colors duration-300" %>
    </div>
  <% end %>
<% end %>
