<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<span class="page">
  <% if page.current? %>
    <span class="px-2 py-2 rounded-xl bg-orange-500 text-white">
      <%= page %>
    </span>
  <% else %>
    <%= link_to page, url, 
        class: "px-3 py-2 rounded-xl hover:bg-yellow-500 hover:text-white transition", 
        remote: remote, 
        rel: page.rel %>
  <% end %>
</span>

